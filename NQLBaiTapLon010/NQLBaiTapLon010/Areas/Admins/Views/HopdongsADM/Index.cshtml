@model IEnumerable<NQLBaiTapLon010.Models.Hopdong>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admins/Views/Shared/_LayoutADM.cshtml";
}

<h2>Danh sách hợp đồng</h2>

<p>
    @Html.ActionLink("Thêm mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nhanviens.Tennhanvien)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ngaykyket)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Thoihanhopdong)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nhanviens.Tennhanvien)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ngaykyket)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Thoihanhopdong)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Chi tiết", "Details", new { id=item.ID }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
